            <br />
            <div class="form-group">
                @Html.Label("First Name: ", new { id = "lblFirstName" })
                @Html.TextBox("txtFirstName", null, new { id = "txtFname", @class = "form-control" })@*, placeholder = "First Name" })*@
            </div>
            <div class="form-group">
                @Html.Label("Last Name: ", new { id = "lblLastName" })
                @Html.TextBox("txtLName", null, new { id = "txtLname", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Email ID: ", new { id = "lblEmailId" })
                @Html.TextBox("txtEmailID", null, new { id = "txtEid", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Phone No: ", new { id = "lblPhoneNo" })
                @Html.TextBox("txtPhoneNo", null, new
                {
                    id = "txtPNo",
                    @class = "form-control",
                    type = "number",
                    onInput = "this.value = this.value.slice(0,10)"
                })
            </div>
            <div class="form-group">
                @Html.Label("Date Of Birth: (MM/DD/YYYY)")
                @Html.TextBox("txtDOB", null, new { id = "txtDOB", @class = "form-control DOB", @readonly = true })
            </div>
            <div class="form-group">
                @Html.Label("Gender:")
                <div class="form-check">
                    @Html.RadioButton("Gender", "M", new { id = "chkMale", text = "Male", @class = "form-check-input Gender" })
                    @Html.Label("Male", new { @for = "chkMale" })
                </div>
                <div class="form-check">
                    @Html.RadioButton("Gender", "F", new { id = "chkFemale", text = "Female", @class = "form-check-input Gender" })
                    @Html.Label("Female", new { @for = "chkFemale" })
                </div>
                <div class="form-check">
                    @Html.RadioButton("Gender", "T", new { id = "chkTransgender", text = "Transgender", @class = "form-check-input Gender" })
                    @Html.Label("Transgender", new { @for = "chkTransgender" })
                </div>
            </div>
            @{
                List<SelectListItem> objItems = new List<SelectListItem>(){
                    new SelectListItem { Text = "Select", Value = "S", Selected = true },
                    new SelectListItem { Text = "YES", Value = "Y" },
                    new SelectListItem { Text = "NO", Value = "N" },
                };
                ViewBag.ListItem = objItems;
            }
            <div class="form-group">
                @Html.Label("Are You Indian:")
                @Html.DropDownList("ListItem", null, new { id = "drpIndian", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Hobbies:")
                <div class="form-check">
                    @Html.CheckBox("Hobbies", false, new { id = "chkVGames", @class = "form-check-input" })
                    @Html.Label("Virtual Games", new { @for = "chkVGames" })
                </div>
                <div class="form-check">
                    @Html.CheckBox("Hobbies", false, new { id = "chkPGames", @class = "form-check-input" })
                    @Html.Label("Physical Games", new { @for = "chkPGames" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Upload Document:")<br />
                @Html.TextBox("uploadDoc", null, new { id = "updoc", type = "file" })
                @Html.TextBox("btnDocUpload", "Document Upload", new
                {
                    id = "btnUpDoc",
                    type = "button",
                    onclick = "btnUpDocClick()",
                    @class = "btn btn-primary"
                })
            </div>

            <div class="form-group">
