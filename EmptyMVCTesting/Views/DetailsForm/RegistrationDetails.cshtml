    <script type="text/javascript">
        function Validate() {
            console.log("HII Validation");
            var Msg = "";
            var ErrorFlag = false;
            var i = 1;
            //var element = document.getElementById('txtFname');
            //var str = "";
            //if (element != null) {
            //    str = element.value;
            //}
            //else {
            //    str = "No Value";
            //}
            //console.log("field- ", str);

            var FName, LName, EmailId, PhoneNo, DOB, Gender, MGender, FGender, TGender, Indian, Hobbies, VHobbies, PHobbies;

            FName = document.getElementById("txtFname") == null ? "" : document.getElementById("txtFname").value;
            LName = document.getElementById("txtLname") == null ? "" : document.getElementById("txtLname").value;
            EmailId = document.getElementById("txtEid") == null ? "" : document.getElementById("txtEid").value;
            PhoneNo = document.getElementById("txtPNo") == null ? "" : document.getElementById("txtPNo").value;
            DOB = document.getElementById("txtDOB") == null ? "" : document.getElementById("txtDOB").value;
            Gender = document.getElementById("Gender") == null ? "" : document.getElementById("Gender").value;
            MGender = document.getElementById("chkMale") == null ? false : document.getElementById("chkMale").checked;
            FGender = document.getElementById("chkFemale") == null ? false : document.getElementById("chkFemale").checked;
            TGender = document.getElementById("chkTransgender") == null ? false : document.getElementById("chkTransgender").checked;
            Indian = document.getElementById("drpIndian") == null ? "" : document.getElementById("drpIndian").value;
            Hobbies = document.getElementById("Hobbies") == null ? "" : document.getElementById("Hobbies").value;
            VHobbies = document.getElementById("chkVGames") == null ? false : document.getElementById("chkVGames").checked;
            PHobbies = document.getElementById("chkPGames") == null ? false : document.getElementById("chkPGames").checked;

            console.log("FName- ", FName, " LName- ", LName, ", DOB- ", DOB, " Gender- Male- ", MGender, " Female- ", FGender
                , " TGender- ", TGender, " Indian- ", Indian, " VHobbies- ", VHobbies, " PHobbies- ", PHobbies);

            emailExp = /^([a-zA-Z0-9_\.\-])+\@@(([a-zA-Z0-9\-])+\.)+([com\co\.\in])+$/;

            if (FName == '' && FName.trim() == '') {
                Msg += (i++) + ". First Name is Required \n";
                ErrorFlag = true;
            }

            if (LName == '' && LName.trim() == '') {
                Msg += (i++) + ". Last Name is Required \n";
                ErrorFlag = true;
            }

            if (EmailId == '' && EmailId.trim() == '') {
                Msg += (i++) + ". Email ID is Required \n";
                ErrorFlag = true;
            }
            else if (!EmailId.match(emailExp)) {
                Msg += (i++) + ". Invalid Email Id \n";
                ErrorFlag = true;
            }

            if (PhoneNo == '' && PhoneNo.trim() == '') {
                Msg += (i++) + ". Phone No is Required \n";
                ErrorFlag = true;
            }
            else if (PhoneNo.length != 10) {
                Msg += (i++) + ". Phone number must be 10 Digit \n";
                ErrorFlag = true;
            }

            if (DOB == '' && DOB.trim() == '') {
                Msg += (i++) + ". Date of Birth is Required \n";
                ErrorFlag = true;
            }
            else if (DOB < '12/03/2022') {
                Msg += (i++) + ". Date should not be less then 12/03/2022 \n";
                ErrorFlag = true;
            }

            if (MGender == false && FGender == false && TGender == false) {
                Msg += (i++) + ". Gender is Required \n";
                ErrorFlag = true;
            }

            if (Indian == '' && Indian.trim() == '') {
                Msg += (i++) + ". Are you Indian is Required \n";
                ErrorFlag = true;
            }
            else if (Indian == 'S') {
                Msg += (i++) + ". Need to Select YES / NO As a Indian is Required \n";
                ErrorFlag = true;
            }

            if (VHobbies == false && PHobbies == false) {
                Msg += (i++) + ". Hobbies are Required \n";
                ErrorFlag = true;
            }

            if (ErrorFlag) {
                alert(Msg);
            }
            else
                alert("Everything working fine");

            return true;
        }
    </script>
